%main.container.general-main-wrap
  %h1.general-title-margin= t('checkout.shared.general_title')
  = render 'checkout/checkout_progress', step: :complete
  .text-center.mb-40
    %h3.general-subtitle= t('.thank_you_message')
    %p.fw-300= t('.email_sent_message', user_email: current_user.email)
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0= t('.order_number', number: "##{@order.number}")
        %p.general-address.mb-30= @order.complete_date
      %p.general-address
        = render 'checkout/address', address: @order.from_json_shipping_address
    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0= t('.order_number', number: "##{@order.number}")
      %p.general-address.mb-30= @order.complete_date
  .visible-xs
    = render 'checkout/cart_items_xs', cart_items: @cart_items
  .hidden-xs.divider-lg.pt-20
    = render 'checkout/cart_items', cart_items: @cart_items
  .text-center.general-text-right
    %p.in-gold-500.font-18.order-summary-title= t('carts.show.order_summary')
    %table.general-summary-table.general-summary-table-right.general-text-right
      = render 'checkout/order_summary_table', order: @order, shipping_amount: true
  .text-center
    = link_to t('.back_to_store'), books_path, class: 'btn mb-20 btn-default'
