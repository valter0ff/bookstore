%main.container.mb-res-50
  %h1.general-title-margin= t('checkout.shared.general_title')
  = render 'checkout/checkout_progress', step: :payment
  %h3.general-subtitle= t('credit_card')
  = simple_form_for @order, url: checkout_payment_path do |f|
    .max-600.mb-80
      = f.simple_fields_for :credit_card_attributes, @order.credit_card do |c|
        .form-group.has-error
          = c.label :number, t('.card_number'), class: 'control-label input-label card-number-label'
          = c.input_field :number, id: 'card-number', class: 'form-control', type: 'text', placeholder: t('.card_number')
          = c.full_error :number, class: 'text-danger help-block'
        .row
          .col-sm-6
            .form-group
              = c.label :holder_name, t('.name_on_card'), class: 'control-label input-label holder-name-label'
              = c.input_field :holder_name, id: 'holder-name', class: 'form-control', placeholder: t('.name_on_card')
              = c.full_error :holder_name, class: 'text-danger'
          .col-sm-3
            .form-group
              = c.label :expiry_date, t('.expiry_date'), class: 'control-label input-label expiry-date-label'
              = c.input_field :expiry_date, id: 'expiry-date', class: 'form-control', placeholder: t('.expiry_date')
              = c.full_error :expiry_date, class: 'text-danger'
          .col-sm-3
            .form-group.relative
              = c.label :cvv_code, t('.cvv_code'), class: 'control-label input-label cvv-code-label'
              = c.input_field :cvv_code, id: 'cvv-code', class: 'form-control', placeholder: t('.cvv_code')
              = c.full_error :cvv_code, class: 'text-danger'
              %i.fa.fa-question-circle.general-form-help
    .general-text-align
      %p.in-gold-500.font-18.order-summary-title= t('carts.show.order_summary')
      %table.general-summary-table
        = render 'checkout/order_summary_table', order: @order, shipping_amount: true
    .text-center
      = f.submit t('checkout.shared.save_and_continue'), class: 'btn mb-20 submit-btn'
