%h1.general-title-margin= t('.general_title')
%ul.steps.list-inline
  = tag.li class: ['step', ('active' if step == :address)] do
    %span.step-number= t('.step_one')
    %span.step-text.hidden-xs= t('.address')
  %li.step-divider
  = tag.li class: ['step', ('active' if step == :delivery)] do
    %span.step-number= t('.step_two')
    %span.step-text.hidden-xs= t('.delivery')
  %li.step-divider
  = tag.li class: ['step', ('active' if step == :payment)] do
    %span.step-number= t('.step_three')
    %span.step-text.hidden-xs= t('.payment')
  %li.step-divider
  = tag.li class: ['step', ('active' if step == :confirm)] do
    %span.step-number= t('.step_four')
    %span.step-text.hidden-xs= t('.confirm')
  %li.step-divider
  = tag.li class: ['step', ('active' if step == :complete)] do
    %span.step-number= t('.step_five')
    %span.step-text.hidden-xs= t('.complete')
