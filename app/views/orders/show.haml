%main.container.general-main-wrap
  %h1.general-title-margin= t('.order_number', number: @current_order.number)
  .col-sm-3
    %h3.general-subtitle.shipping-title= t('addresses.new.shipping_title')
    = render 'checkout/address', address: @current_order.from_json_shipping_address
  .col-sm-3
    %h3.general-subtitle.billing-title= t('addresses.new.billing_title')
    = render 'checkout/address', address: @current_order.from_json_billing_address
  .col-sm-3
    %h3.general-subtitle.shipping-method-title= t('.shipments')
    %p.general-address
      %span.shipping-method-name= @current_order.shipping_method.name
  .col-sm-3
    %h3.general-subtitle.payment-title= t('.payment_information')
    %p.general-address
      %span.credit-card-number= @credit_card.masked_number
      %br
      %span.credit-card-expiry-date= @credit_card.expiry_date_full_year
  .visible-xs
    = render 'checkout/cart_items_xs', cart_items: @cart_items
  .hidden-xs.divider-lg.pt-20
    = render 'checkout/cart_items', cart_items: @cart_items
  .text-center.general-text-right
    %p.in-gold-500.font-18.order-summary-title= t('carts.show.order_summary')
    %table.general-summary-table.general-summary-table-right.general-text-right
      = render 'checkout/order_summary_table', order: @current_order, shipping_amount: true
